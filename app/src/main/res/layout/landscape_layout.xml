<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#beff3a">
    <ListView
        android:id="@+id/list"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="4">

    </ListView>

    <RelativeLayout
        android:id="@+id/vegetables"
        android:layout_toEndOf="@+id/list"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list">

        <include
            android:id="@+id/vegetableslayout"
            layout="@layout/fragment_vegetables2"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/list"
        android:visibility="visible"
        android:layout_toRightOf="@+id/list">
        <include layout="@layout/fragment_fruits" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clothes"
        android:layout_toEndOf="@+id/list"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list">

        <include
            android:id="@+id/clotheslayout"
            layout="@layout/fragment_clothes"/>

    </RelativeLayout>


</RelativeLayout>